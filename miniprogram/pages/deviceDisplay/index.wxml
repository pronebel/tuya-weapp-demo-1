<!--pages/deviceDisplay/index.wxml-->

<scroll-view
  class="deviceDisplay"
  scroll-y="true"
  enable-flex="true"
>
  <block wx:for="{{functions}}" wx:key="{{item.code}}">
    <block wx:if="{{item.type === 'Boolean'}}">
      <BooleanItem bind:sendMessage="sendMessage" dpCode="{{item.code}}" devid="{{devid}}" dpValue="{{devStatus[item.code]}}" />
    </block>

    <block wx:if="{{item.type === 'Enum'}}">
      <EnumItem bind:sendMessage="sendMessage" dpCode="{{item.code}}" devid="{{devid}}" dpValue="{{devStatus[item.code]}}" ranges="{{item.values}}" />
    </block>

    <block wx:if="{{item.type === 'Integer'}}">
        <IntergerItem bind:sendMessage="sendMessage" dpCode="{{item.code}}" devid="{{devid}}" dpValue="{{devStatus[item.code]}}" values="{{item.values}}" />
    </block>
  </block>
</scroll-view>

<scroll-view
  class="deviceDisplay"
  style="border-top: 1px solid"
  scroll-y="true"
  enable-flex="true"
>
  <block wx:if="{{message.length !== 0}}">
    <block wx:for="{{message}}" wx:key="{{item.t}}">
      <text space="nbsp" class="message-label">
[{{item.t}}]: "{{item.type}}" 功能点名称: "{{item.code}}" 功能点值: {{item.value}}
      </text>
    </block>
  </block>
</scroll-view>

