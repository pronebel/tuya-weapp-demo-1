/* pages/deviceDisplay/components/Boolean/index.wxss */
.BooleanItem {
  width: 100vw;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  transition: all 300ms ease;
  height: auto;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.BooleanItem-header {
  display: flex;
  flex-direction: column;
}

.BooleanItem-header-dpCode {
	font-family: PingFangSC-Semibold;
	font-size: 24px;
	color: #353535;
}

.BooleanItem-header-dpType {
  font-size: 14px;
  color: #000;
}