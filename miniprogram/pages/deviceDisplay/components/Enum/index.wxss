/* pages/deviceDisplay/components/Enum/index.wxss */

.EnumItem {
  width: 100vw;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  transition: all 300ms ease;
  height: auto;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.EnumItem-header {
  display: flex;
  flex-direction: column;
}

.EnumItem-header-dpCode {
	font-family: PingFangSC-Semibold;
	font-size: 24px;
	color: #353535;
}

.EnumItem-header-dpType {
  font-size: 14px;
  color: #000;
}

.EnumItem-footer {
  width: 100px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 2px solid #000;
  border-radius: 5px;
  padding: 5px 5px;
}

.EnumItem-footer-label {
  font-size: 13px;
  color: #353535;
}

.Enum-item-arrow {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 0px 5px;
}

.Enum-item-upArrow {
  margin-bottom: 5px;
  width: 0;
  height: 0;
  border: 4px solid transparent;
  border-bottom: 8px solid #000;
}

.Enum-item-downArrow {
  width: 0;
  height: 0;
  border: 4px solid transparent;
  border-top: 8px solid #000;
}

