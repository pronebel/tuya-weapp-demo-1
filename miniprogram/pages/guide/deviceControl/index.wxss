/* pages/guide/deviceControl/index.wxss */
page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.uploader {
  width: 100%;
  margin-top: 40rpx;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
  height: auto;
  padding: 0 0 0 40rpx;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

.uploader-text {
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #007aff;
}

.info-title {
  margin-top: 20px;
  text-align: center;
  font-family: PingFangSC-Semibold;
  font-size: 20px;
  color: #22242c;
}

.info-label {
  margin-top: 15px;
  width: 100%;
  font-family: PingFangSC-Semibold;
  font-size: 15px;
  color: #22242c;
}

.devItem {
  margin-top: 18px;
  height: 40px;
  padding: 19px 24px;
  width: 291px;
  display: flex;
  align-items: center;
	background-color: #fff;
	box-shadow: 0px 11px 21px 0px 
		rgba(43, 43, 43, 0.1);
	border-radius: 8px;
}

.devItem-img {
  width: 51px;
  height: 40px;
}

.devItem-title {
  margin-left: 15px;
  width: 128px;
	height: 22px;
	font-family: PingFangSC-Semibold;
  font-size: 16px;
  flex: 1;
	color: #495054;
}